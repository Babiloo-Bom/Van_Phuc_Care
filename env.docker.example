# ============================================
# Van Phuc Care - Docker Environment Variables
# Copy this file to .env and update values
# ============================================

# ============================================
# MongoDB Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production
MONGODB_URI=mongodb://admin:change_this_password_in_production@mongodb:27017/vanphuccare?authSource=admin

# ============================================
# Backend API Configuration
# ============================================

# Application
NODE_ENV=production
PORT=3000

# Authentication
JWT_SECRET=change_this_to_random_string_min_32_chars
JWT_EXPIRE=7d

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=

# Redis (Optional - for caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Frontend Configuration
# ============================================

# TinyMCE Editor
TINYMCE_KEY=g10x6c0ppoj4l6brqkg2j8l5lza4w6vmdu6k80o2g8ilbkju

# App URLs (for production, change to actual domains)
ADMIN_URL=http://admin.vanphuccare.com
CRM_URL=http://crm.vanphuccare.com
ELEARNING_URL=http://learning.vanphuccare.com

# ============================================
# Nginx Configuration
# ============================================
NGINX_HOST=vanphuccare.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# Docker Configuration
# ============================================

# Restart policy
RESTART_POLICY=unless-stopped

# Resource limits (optional)
# API_MEMORY_LIMIT=2g
# API_CPU_LIMIT=2
# MONGODB_MEMORY_LIMIT=2g
# MONGODB_CPU_LIMIT=2

# ============================================
# NOTES
# ============================================
# 1. Copy to .env: cp env.docker.example .env
# 2. NEVER commit .env to git after adding real values
# 3. Generate strong JWT_SECRET: openssl rand -base64 32
# 4. For Gmail: Use App Password, not regular password
# 5. Change all passwords before production deployment
# 6. Use strong MongoDB root password
# 7. Setup SSL certificates before production

