# ============================================
# Development Dockerfile for CRM Portal
# With hot reload
# ============================================

FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat

COPY package.json package-lock.json* ./

RUN npm ci

COPY . .

ENV PORT=3001
EXPOSE 3001

CMD ["npm", "run", "dev"]

