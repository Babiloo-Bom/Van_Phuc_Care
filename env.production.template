# Van Phuc Care - Production Environment Variables
# Copy this file to .env.production and fill in your values

# GitHub Container Registry (for pulling images)
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-token

# JWT Secrets
JWT_SECRET=your-jwt-secret-here
JWT_ADMIN_SECRET=your-admin-jwt-secret-here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@vanphuccare.com

# TinyMCE
TINYMCE_KEY=your-tinymce-api-key-here

# Google OAuth
NUXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

